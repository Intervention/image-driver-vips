{
    "name": "intervention/image-driver-vips",
    "description": "libvips driver for Intervention Image",
    "homepage": "https://image.intervention.io/",
    "keywords": [
        "image",
        "vips",
        "libvips"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Vogel",
            "email": "oliver@intervention.io",
            "homepage": "https://intervention.io/"
        },
        {
            "name": "Thomas Picquet",
            "email": "thomas@sctr.net"
        }
    ],
    "require": {
        "php": "^8.1",
        "intervention/image": "^3.11.0",
        "jcupitt/vips": "^2.4"
    },
    "require-dev": {
        "ext-fileinfo": "*",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "Intervention\\Image\\Drivers\\Vips\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intervention\\Image\\Drivers\\Vips\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpstan": "phpstan analyse --ansi",
        "phpunit": "phpunit",
        "phpcs": "phpcs"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
